{# templates/security/login.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="container">
        <div class="row mt-2 align-items-center">
            <div class="col-md-6">
                <p>
                    Bienvenue sur votre site de gestionnaire de liens.<br />
                    Veuillez vous connecter pour profiter des toutes les fonctionnalités.<br />
                    Si vous voulez juste jeter un coup d'oeil.<br />
                    <a class="btn btn-primary" href="{{ path('home')}}">C'est par la</a> 
                </p>
            </div>
            <div class="col-md-6">    
                <form class="d-inline" action="{{ path('home') }}" method="post">
                    <div>
                        <label for="username">Email:</label>
                        <input type="email" id="username" name="_username" value="{{ last_username }}" />

                        <label for="password">Password:</label>
                        <input type="password" id="password" name="_password" />
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"> {# permet la sécurisatiion contre attaque csrf #}
                        <input type="hidden" name="_target_path" value="{{ path('home')}}" /> {# redirection après login #}
                        <button class="btn btn-primary" type="submit"><i class="fas fa-user"></i>&nbsp; Connexion</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
