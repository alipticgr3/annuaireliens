<!-- Liste des Utilisateurs -->
<div class="col-md-8 mb-2">
	<div class="card">
		<div class="card-header bg-user">
			<h5 class="text-center">Liste des utilisateurs</h5>
		</div>
		<div class="card-body">
			<table class="table table-striped">
				<thead class="thead-light">
					<tr>
						<th scope="col">Nom</th>
						<th scope="col">PrÃ©nom</th>
						<th scope="col">Email</th>
						<th scope="col">Gestion</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users if user.admin != 1 %}
						<tr>
							<th scope="row">{{ user.lastname }}</th>
							<td>{{ user.firstname }}</td>
							<td>{{ user.mail }}</td>
							<td>
								<div class="btn-group">
									<button class="btn btn-warning" type="button" data-toggle="tooltip" data-placement="bottom" title="Modifier"><i class="fas fa-edit"></i></button>
									<button class="btn btn-danger" type="button" data-toggle="tooltip" data-placement="bottom" title="Supprimer"><i class="fas fa-trash-alt"></i></button>
								</div>
							</td>
						</tr>
					{% endfor %}	
				</tbody>
			</table>
		</div>
		<div class="card-footer">
		</div>
	</div>
</div>