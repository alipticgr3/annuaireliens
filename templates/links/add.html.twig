{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">
	<div class="row mt-2">
	<div class="col-md-12">
    {{ form_start(form) }}
	    <div class="card">
			<div class="card-header bg-info">
				<h5 class="text-center">{% if form.name.vars.value %}Modification {% else %}Ajout {% endif %}d'un lien</h5>
			</div>
			<div class="card-body">
				<div class="row">
					<div class="col-md-8">
						<div class="row">
							<div class="col-md-6">
								{{form_widget(form.name,{
									'attr':{
										'class': 'form-control mb-1',
										'placeholder' : 'Nom du Lien',
									}
								})}}
								
							</div>
							<div class="col-md-6">
								{{form_widget(form.url,{
									'attr':{
										'class': 'form-control mb-1',
										'placeholder' : 'URL du Lien',
										'rows' : '1',
									}
								})}}
							</div>
							<div class="col-md-12">
								{{form_widget(form.tagline,{
									'attr':{
										'class': 'form-control mb-1',
										'placeholder' : 'Accroche',
									}
								})}}
							</div>
							<div class="col-md-12">
								{{form_widget(form.detail,{
									'attr':{
										'class': 'form-control mb-1',
										'placeholder' : 'Descritpion détailée',
										'cols' : '50',
										'rows' : '10',
									}
								})}}
							</div>
						</div>
					</div>
					<div class="col-md-4">
						<div class='row'>
							{{form_label(form.idcategory,'Catégorie : ')}}
							{{form_widget(form.idcategory,{
								'attr':{
									'class': 'form-control mb-1',
								}
							})}}
						</div>
						
						
						{# J'ai viré la gestion d'image
							<div class='row'>
								<img id='imglink' name='imglink' src='{{form.image.vars.value}}'>
							</div>
							<div class='input-group'>
								{{form_widget(form.image,{
									'attr':{
										'class': 'form-control mb-1',
									}
								})}}
								<div class="input-group-append">
									<button name="loadimg" id="loadimg" class="btn btn-secondary" type="button"><i class="fas fa-upload fa-sm"></i></button>
								</div>
							</div>
						#}
					</div>
				</div>
			</div>
			<div class="card-footer">
				<a class="btn btn-primary" href="{{ path('links', {page : 1}) }}">Annuler</a>
				<button class="btn btn-success float-right" type="submit"><i class="fas fa-plus-circle fa-lg"></i>&nbsp;{% if form.name.vars.value %}Modifier{% else %}Ajouter{% endif %}</button>
			</div>
		</div>
	{{ form_errors(form) }}
	{{ form_rest(form) }}
	
	{{ form_end(form) }}
	</div>
	</div>
	</div>
    
{% endblock %}